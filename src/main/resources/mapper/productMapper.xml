<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.demo2.product.query.dao.ProductMapper">
	<!--筛选条件-->
	<sql id="searchParam">
		<if test="id != '' and id != null">
			and id = #{id}
		</if>
	</sql>
	
	<!--求count判断-->
	<sql id="isCount1">
		<if test="count == null  and notCount ==1">
			select count(*) from (
		</if>
	</sql>
	<sql id="isCount2">
		<if test="count == null  and notCount ==1">
			) count
		</if>
	</sql>	
	
	<!--是否分页判断-->
	<sql id="isPage">
		<if test="size != null  and size !=''">
			limit #{size} offset #{firstRow} 
		</if>
		<if test="size ==null  or size ==''">
			<if test="pageSize != null  and pageSize !=''">
				limit #{pageSize} offset #{startNum} 
			</if>
		</if>
	</sql>
	
	<select id="query" parameterType="java.util.HashMap" resultType="com.demo2.product.entity.Product">
		   <include refid="isCount1"/> 
		   	 	SELECT * FROM Product WHERE 1 = 1
				<include refid="searchParam"/>
				<include refid="isPage"/>
		   <include refid="isCount2"/>
	</select>
</mapper>